<%- include('../partials/header') %>

<h1>Producers</h1>

<!-- Sorting / Filter Links -->
<div class="filter-links">
  <a href="/producers/sort/ASC" class="filter-btn">A → Z</a>
  <a href="/producers/sort/DESC" class="filter-btn">Z → A</a>
  <a href="/producers/country/USA" class="filter-btn">USA</a>
  <a href="/producers/country/UK" class="filter-btn">UK</a>
</div>

<ul>
  <% producers.forEach(p => { %>
    <li>
      <a href="/producers/<%= p.producer_id %>"><%= p.name %></a>
    </li>
  <% }) %>
</ul>

